{% extends 'base.html.twig' %}

{% block title %}Author Details!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Author Details</h1>
    {% if author is not null %}
        <div>
        <img src="{{ author.picture }}" alt="{{ author.username }}" height="200px" width="200px">
        <p><b>Username : </b> {{ author.username }} </p>
        <p><b>Email : </b> {{ author.email }} </p>
        <p><b>Number of Books : </b> {{ author.nbBooks }} </p>
        <hr>
        </div>
    {% else %}
        <p>No Author found.</p>
    {% endif %}
    <a href="{{ path('app_author_list')}}">Return to List</a>
</div>
{% endblock %}

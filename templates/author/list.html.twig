{% extends 'base.html.twig' %}

{% block title %}Author List!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Author List</h1>
    {% set somme_livres = 0 %}
    {% for author in authors %}
        <div>
        <img src="{{ author.picture }}" alt="{{ author.username }}" height="200px" width="200px">
        <p><b>Username : </b> {{ author.username }} </p>
        <p><b>Email : </b> {{ author.email }} </p>
        <p><b>Number of Books : </b> {{ author.nbBooks }} </p>
        <a href="{{path('app_author_details',{id: author.id})}}">Details</a>
        <hr>
        </div>
        {% set somme_livres = somme_livres + author.nbBooks %}
    {% endfor %}
    <div>
    <p><b>Number of Authors : </b> {{ authors | length }} </p>
    <p><b>Number of All Books : </b> {{ somme_livres }} </p>
    </div>
</div>
{% endblock %}
